<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:id="@+id/login_frame"
              android:orientation="vertical"
              tools:context="ar.com.sourcesistemas.Fragments.Login"
              android:paddingLeft="70dp"
              android:paddingTop="120dp"
    >


    <TextView
        android:text="Usuario:"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/label_username"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Enter Name"
        android:ems="10"
        android:id="@+id/username"
        android:layout_below="@+id/facebook_name"
        android:layout_alignLeft="@+id/login_button"
        android:layout_alignStart="@+id/login_button"
        android:layout_marginTop="15dp"
        android:background="@drawable/edittext_border_style"
        android:layout_marginBottom="20dp"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:text="ContraseÃ±a:"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/label_password"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Enter Password"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/password"
        android:layout_below="@+id/save"
        android:layout_alignLeft="@+id/username"
        android:layout_alignStart="@+id/label_password"
        android:layout_marginTop="15dp"
        android:background="@drawable/edittext_border_style"
        android:layout_marginBottom="20dp"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:layout_marginLeft="10dp"/>

    <Button
        android:text="Register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/save"
        android:layout_above="@+id/load"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="70dp"/>


    <TextView
        android:text="O puede loguear con facebook:"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:layout_marginTop="15dp"/>

    <com.facebook.login.widget.LoginButton
        android:id="@+id/login_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:elevation="0dp"
        android:layout_below="@+id/password"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="-40dp"
        android:layout_marginTop="20dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/login_message"
        android:layout_marginTop="80dp"
        android:textStyle="bold"
        android:textColor="@android:color/holo_red_dark"
        />


</LinearLayout>
